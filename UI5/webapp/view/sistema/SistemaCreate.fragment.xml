<core:FragmentDefinition

   xmlns="sap.m"
   xmlns:core="sap.ui.core" 
   id="formSistema"
   
   >
   <Dialog id="addSistema" title="Adicionar Sistema" class="SistemaDialog " contentWidth="80%" >
    

      <content class="SistemaDialogcenter" >
        <VBox  class="SistemaDialog"  alignItems="Center" justifyContent="Center">
          <Label text="Nome do Sistema" />
          <Input value="{/nomeSistema}" id="nmSistema" class="customFieldWidth" width="90%" />
        
   
          
        </VBox>
      </content>
      <buttons>
        <Button text="Salvar" press=".onSave" />
        <Button text="Cancelar" press=".onCancel" />
      </buttons>

   </Dialog>
</core:FragmentDefinition>

