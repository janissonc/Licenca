<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 
   id="formSistemaEdit"
   >
   <Dialog
      
      title="Alteração do sistema: {sistemaEdit>/sistema/cdSistema}" 
      class="SistemaDialog " 
      >

      <content class="SistemaDialogcenter" >
        <VBox  class="SistemaDialog"  alignItems="Center" justifyContent="Center">
            <Label text="Nome do Sistema" />
            <Input value="{sistemaEdit>/sistema/cdSistema}" id="cdSistemaEdit" visible="false"/>
            <Input value="{sistemaEdit>/sistema/nmSistema}" id="nmSistemaEdit" />
   
            <Label text="Ativo" />
           	<Switch state="true" customTextOn="Sim" customTextOff="Não" id="ativoEdit">
				      <layoutData>
					      <FlexItemData growFactor="1" />
				      </layoutData>
			      </Switch>
        </VBox>
      </content>
      <buttons>
        <Button text="Salvar" press=".onHandlerEdit" />
        <Button text="Cancelar" press=".onCancelEdit" />
      </buttons>

   </Dialog>
</core:FragmentDefinition>