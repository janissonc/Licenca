<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 
   id="formSistemaEdit"
   >
   <Dialog
      id="helloDialog"
      title="Alteração do sistema: {/sistema/cdSistema}" 
      class="SistemaDialog " 
      >

      <content class="SistemaDialogcenter" >
 <VBox  class="SistemaDialog"  alignItems="Center" justifyContent="Center">
            <Label text="Nome do Sistema" />
            <Input value="{/sistema/cdSistema}" id="cdSistema" visible="false"/>
            <Input value="{/sistema/nmSistema}" id="nmSistema" />
   
            <Label text="Controlar Usuário" />
            	<Switch state="true" customTextOn="Sim" customTextOff="Não" id="controlarUsuario">
               <layoutData>
					      <FlexItemData growFactor="1" />
				      </layoutData>
			      </Switch>
            <Label text="Ativo" />
           	<Switch state="true" customTextOn="Sim" customTextOff="Não" id="ativo">
				      <layoutData>
					      <FlexItemData growFactor="1" />
				      </layoutData>
			      </Switch>
   
           <Label text="Tipo de Controle" />
           <RadioButtonGroup columns="1" selectedIndex="{/tipoControle}" id="tipoControle">
             <RadioButton text="Por Login" />
             <RadioButton text="Por Tela" />
             <RadioButton text="Por Máquina" />
           </RadioButtonGroup>
         </VBox>
       </content>
       <buttons>
         <Button text="Salvar" press=".onHandlerEdit" />
         <Button text="Cancelar" press=".onCancel" />
       </buttons>

   </Dialog>
</core:FragmentDefinition>