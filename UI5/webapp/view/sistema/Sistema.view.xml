<mvc:View
	height="100%"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:semantic="sap.f.semantic"
	controllerName="sap.ui.demo.walkthrough.controller.sistema.Sistema"
	id="sistema.Sistema"
	>
	
	<semantic:SemanticPage>

		<semantic:titleHeading>
			<Title text="Sistema" />
		</semantic:titleHeading>
		<semantic:titleMainAction>
			<semantic:TitleMainAction id="editAction" text="Adicionar" press="onAdd"/>
		</semantic:titleMainAction>

		<semantic:content>
			<Table
				id="idSistemaTable"
				
				items="{/sistemas}"
				class="sapFSemanticPageAlignContent"
				width="auto">

				<columns>
					<Column>
						<Text text="Código do sistema"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Nome do sistema"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Status"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Ações"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{cdSistema}"/>
							<Text text="{nmSistema}"/>
							<Text text="{status}"/>
							<HBox >
								<Button text="" press="onEdit" icon="sap-icon://edit"/>
								<Button text="" press="handlerDelete" icon="sap-icon://delete"/>
							</HBox>
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>
